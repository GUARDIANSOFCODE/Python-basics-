import tkinter as tk

# Create the main window
root = tk.Tk()
root.title("Click Me!")  # Set the window title

# Define a function to handle button clicks
def button_clicked():
    print("Button clicked!")  # You can replace this with your desired action

# Create a button with text and a click handler
my_button = tk.Button(root, text="Click Me", command=button_clicked)

# Arrange the button within the window using pack geometry manager
my_button.pack()

# Start the main event loop to display the window
root.mainloop()
