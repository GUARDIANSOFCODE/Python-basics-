import math

def gcd(num1, num2):
  """Calculates the GCD of two numbers using the math.gcd function."""
  return math.gcd(num1, num2)

# Example usage
number1 = 18
number2 = 30
greatest_common_divisor = gcd(number1, number2)

print(f"The GCD of {number1} and {number2} is: {greatest_common_divisor}")
